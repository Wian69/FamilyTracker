<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ProCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="54dp"
            android:layout_height="54dp">

            <ImageView
                android:id="@+id/ivMemberAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:padding="2dp"/>
            
            <ImageView
                android:id="@+id/ivStatusDot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/circle_bg"
                app:tint="@color/secondary"
                android:outlineProvider="background"
                android:background="@drawable/circle_bg"
                android:backgroundTint="@color/surface"
                android:padding="2dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family Member"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tvMemberStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stationary â€¢ 5 min ago"
                android:textSize="13sp"
                android:alpha="0.75"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/tvMemberBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--%"
            android:textColor="@color/secondary"
            android:fontFamily="sans-serif-medium"
            android:textSize="13sp"
            android:layout_marginEnd="4dp"
            android:drawableStart="@drawable/ic_battery_std"
            android:drawablePadding="4dp"
            android:drawableTint="@color/secondary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
